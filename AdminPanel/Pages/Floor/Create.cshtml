@page
@model AdminPanel.Pages.Floor.CreateModel

@{
    ViewData["Title"] = "Создание этажа";
}

<h1>Создание</h1>

<h4>Этаж</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FloorLayout.Name" class="control-label"></label>
                <input asp-for="FloorLayout.Name" class="form-control" />
                <span asp-validation-for="FloorLayout.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FloorLayout.Description" class="control-label"></label>
                <input asp-for="FloorLayout.Description" class="form-control" />
                <span asp-validation-for="FloorLayout.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FloorLayout.PhotoLink" class="control-label"></label>
                <input asp-for="FloorLayout.PhotoLink" class="form-control" />
                <span asp-validation-for="FloorLayout.PhotoLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Вернуться назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
