@page
@model AdminPanel.Pages.Cabinets.IndexModel

@{
    ViewData["Title"] = "Кабинеты";
}

<h1>Кабинеты</h1>

<p>
    <a asp-page="Create">Создать новый кабинет</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cabinet[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cabinet[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cabinet[0].EmployeeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cabinet[0].FloorLayoutId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Cabinet) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FloorLayoutId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Редактировать</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
